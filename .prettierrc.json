{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "**.sol",
      "options": {
        "parser": "solidity-parse",
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false
      }
    },
    {
      "files": ["**.ts", "**.js", "**.test.ts", "**.test.js"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "useTabs": false,
        "endOfLine": "auto"
      }
    },
    {
      "files": "**.json",
      "options": {
        "tabWidth": 2,
        "printWidth": 200
      }
    }
  ]
}
